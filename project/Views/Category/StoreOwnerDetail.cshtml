@model project.Models.Category

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h2 class="text text-success mt-3">@Model.Name</h2>
            <div class="col">
                <table class="table table-bordered">
                    <tr>
                        <th colspan="2">Book List</th>
                        <th>TOTAL: @Model.Books.Count</th>
                    </tr>
                    <tr>
                        <th>Book Id</th>
                        <th>Book Name</th>
                        <th>Book Image</th>
                    </tr>
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>@book.Id</td>
                            <td>@book.Name</td>
                            <td>
                                <a asp-controller="Book" asp-action="StoreOwnerDetail" asp-route-id="@book.Id">
                                    <img src="@book.Image" width="80" height="80">
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>

    </div>
</div>