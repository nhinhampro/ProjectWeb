@model List<Order>
@if (User.Identity.IsAuthenticated)
{
    <table class="table table-info">
        
        <tr>
            <th>Id</th>
            <th>Customer</th>
            <th>OrderDate</th>
            <th>OrderStock</th>
            <th>Total Price</th>
            <th>Book Id</th>

            <th>Menu</th>

        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer</td>
                <td>
                    @order.OrderDate
                </td>
                <td>@order.OrderStock</td>
                <td>@order.TotalPrice</td>
                <td>@order.BookId</td>
                <td>


                    @if (User.Identity.IsAuthenticated && User.IsInRole("StoreOwner"))
                    {

                        <a class="btn btn-success">
                            Accept
                        </a>
                        <a asp-controller="Order" asp-action="Delete" class="btn btn-danger" asp-route-id="@order.Id">
                            Delete
                        </a>
                        
                    }
                </td>

            </tr>

        }
    </table>
}