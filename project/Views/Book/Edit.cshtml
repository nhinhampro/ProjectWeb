@model project.Models.Book

<form method="post" asp-controller="Book" asp-action="Edit"> 
    <h2>Edit book</h2>

    <div class="form-group">
        <label class="h4 text-success">Book Name</label>
        <input class="form-control" asp-for="@Model.Name" />
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Image">Image</label>
        <input class="form-control" asp-for="@Model.Image" />
        <span class="text-danger" asp-validation-for="@Model.Image"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Price">Price</label>
        <input class="form-control" asp-for="@Model.Price" />
        <span class="text-danger" asp-validation-for="@Model.Price"></span>
    </div>

    <div class="form-group">
        <label class="h4 text-success">Category</label>
        <select class="list-group-item"
                asp-for="CategoryId"
                asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
            <option>Select a category</option>
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Description"></label>
        <input class="form-control" asp-for="@Model.Description" />
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
    </div>

    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Stock"></label>
        <input class="form-control" asp-for="@Model.Stock" />
        <span class="text-danger" asp-validation-for="@Model.Stock"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-warning" value="Edit" />
    </div>
</form>