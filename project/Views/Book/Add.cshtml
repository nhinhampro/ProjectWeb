@model project.Models.Book

<form method="post" asp-controller="Book" asp-action="Add">
    <h2>Add new book</h2>


    <div class="form-group">
        <label class="h4 text-success">Book Name</label>
        <input class="form-control" asp-for="@Model.Name" />
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Image">Image</label>
        <input class="form-control" asp-for="@Model.Image" />
        <span class="text-danger" asp-validation-for="@Model.Image"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Price">Price</label>
        <input class="form-control" asp-for="@Model.Price" />
        <span class="text-danger" asp-validation-for="@Model.Price"></span>
    </div>
    <div class="form-group">
        <label class="h4 text-success">Category</label>
        <select class="list-group-item" asp-for="CategoryId">
            <option>Select a category</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">
                    @category.Name
                </option>
            }
        </select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Description">Description</label>
        <input class="form-control" asp-for="@Model.Description" />
        <span class="text-danger" asp-validation-for="@Model.Description"></span>
    </div>

    <div class="form-group">
        <label class="h4 text-success" asp-for="@Model.Stock">Stock</label>
        <input class="form-control" asp-for="@Model.Stock" />
        <span class="text-danger" asp-validation-for="@Model.Stock"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-warning" value="Add" />
    </div>
</form>