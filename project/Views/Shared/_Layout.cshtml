<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
 
</head>
<body>
    <header>
        @if (User.Identity.IsAuthenticated && User.IsInRole("StoreOwner"))
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="position: fixed; z-index: 1; width: 100%">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="h1 text mr-4" asp-controller="Book" asp-action="StoreOwnerIndex">Book</a>
                                </li>
                                <li class="nav-item">
                                    <a class="h1 text mr-4 " asp-controller="Category" asp-action="StoreOwnerIndex">Category</a>
                                </li>
                                <li class="nav-item">
                                    <a class="h1 text mr-4" asp-controller="Order" asp-action="Index">Order</a>
                                </li>
                        </ul>
                    </div>
                </div>
            </nav>
        } else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 " style="position: fixed; z-index: 1; width: 100%">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <partial name="_LoginPartial" />
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="h1 text " asp-controller="Account" asp-action="Index">Account</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        } else
        {
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 " style="position: fixed; z-index: 1; width: 100%">
                <div class="container">
                    <div class="logo"><img src="https://mir-s3-cdn-cf.behance.net/project_modules/disp/c039b824474525.56334ce736de9.jpg" style="height: 80px; width: 80px"></div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Book" asp-action="CustomerIndex">All Books</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="CustomerIndex">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial"/>
                    </div>
               </div>
            </nav>
        }
    </header>
    
    @*<div class="container" style="margin-bottom: 200px">*@
    <main role="main" class="pb-3" style="margin-bottom: 150px; padding-top: 100px">
        @if (User.Identity.IsAuthenticated && User.IsInRole("StoreOwner"))
        {
            @RenderBody()
        }
        else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
            @RenderBody()
        }
        else
        {
            @*<img width="100%" style="z-index: -1; position: fixed;" src="https://cdn-fgnbn.nitrocdn.com/CExiFXHDXAeTGrlIkvRSSLnZISOqDumi/assets/static/optimized/rev-6e80265/wp-content/uploads/2022/06/blue-dots-resource.png" />*@
            @RenderBody()
        }
        
    </main>
    @*</div>*@

    <footer class="border-top footer bg-light">
        <div class="container">
            Book Management System 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
